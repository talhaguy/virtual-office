{
    "name": "virtual-office-server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "prettier:check": "prettier --check 'src/**/*'",
        "prettier:fix": "prettier --write 'src/**/*'",
        "lint": "eslint './src/**/*.{ts,tsx}'",
        "test": "jest --coverage=true",
        "test:watch": "jest --watch",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
        "server:watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
        "server:clean": "rm -rf dist",
        "server:build": "npm run server:clean; tsc && cp -r src/views dist/src",
        "client:build": "parcel build client-src/index.tsx --out-dir public --out-file scripts.js",
        "client:watch": "parcel watch client-src/index.tsx --out-dir public --out-file scripts.js",
        "build": "npm run server:build && npm run client:build",
        "db:reinit": "node dist/build-scripts/index.js",
        "start": "node dist/src/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/talhaguy/virtual-office-server.git"
    },
    "author": "Muhammad Talha",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/talhaguy/virtual-office-server/issues"
    },
    "homepage": "https://github.com/talhaguy/virtual-office-server#readme",
    "devDependencies": {
        "@testing-library/dom": "^7.5.2",
        "@testing-library/jest-dom": "^5.7.0",
        "@testing-library/react": "^10.0.4",
        "@testing-library/user-event": "^10.2.0",
        "@types/body-parser": "^1.19.0",
        "@types/connect-ensure-login": "^0.1.5",
        "@types/connect-flash": "0.0.35",
        "@types/ejs": "^3.0.3",
        "@types/express": "^4.17.6",
        "@types/express-session": "^1.17.0",
        "@types/jest": "^25.2.1",
        "@types/mongoose": "^5.7.14",
        "@types/morgan": "^1.9.0",
        "@types/node": "^13.13.4",
        "@types/passport": "^1.0.3",
        "@types/passport-local": "^1.0.33",
        "@types/react-router-dom": "^5.1.5",
        "@types/socket.io": "^2.1.5",
        "@types/socket.io-client": "^1.4.33",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "autoprefixer": "^9.7.6",
        "bufferutil": "^4.0.1",
        "canvas": "^2.6.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-react": "^1.1.7",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "jest": "^25.5.4",
        "nodemon": "^2.0.3",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^2.0.0",
        "prettier": "2.0.5",
        "ts-jest": "^25.4.0",
        "ts-mockito": "^2.5.0",
        "ts-node": "^8.10.1",
        "typescript": "^3.8.3",
        "utf-8-validate": "^5.0.2"
    },
    "dependencies": {
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "body-parser": "^1.19.0",
        "connect-ensure-login": "^0.1.1",
        "connect-flash": "^0.1.1",
        "dotenv": "^8.2.0",
